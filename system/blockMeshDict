FoamFile
{
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

L 0.202;
l 0.03;
R 0.0533;
r 0.013;

meshX 232;
meshY 54;

//*************************//

Rcorr #calc "$R - $r";
rneg  #calc "- $r";
lneg  #calc "- $l";

convertToMeters 1;

vertices
(
(0    0       -1) //0
($L   0       -1) //1
($L   $rneg   -1) //2
(0    $rneg   -1) //3

($lneg  $rneg -1) //4
($lneg  0     -1) //5

(0    $Rcorr  -1) //6 changed neuer Radius
($L   $Rcorr  -1) //7 changed neuer Radius

(0    0        0) //8
($L   0        0) //9
($L   $rneg    0) //10
(0    $rneg    0) //11

($lneg  $rneg  0) //12
($lneg  0      0) //13

(0    $Rcorr   0) //14 changed neuer Radius
($L   $Rcorr   0) //15 changed neuer Radius


);

blocks
(

    //(y x z)
    hex (0 3 2 1 8 11 10 9) //1
    (13 202 1)
    simpleGrading (1 1 1)

    hex (5 4 3 0 13 12 11 8) //2
    (13 30 1)
    simpleGrading (1 1 1)

    hex (6 0 1 7 14 8 9 15) //3
    (41 202 1)
    simpleGrading (1 1 1)


);

edges
(
);

boundary
(

    outlet
    {
        type patch;
        faces
        (
            (4 12 13 5)
        );
    }

    front
    {
        type symmetry;
        faces
        (
            (12 13 8 11)
            (11 8 9 10)
            (8 14 15 9)
        );
    }

    back
    {
        type symmetry;
        faces
        (
            (4 5 0 3)
            (3 0 1 2)
            (0 6 7 1)
        );
    }

    tank
    {
        type wall;
        faces
        (
            (13 5 0 8)
            (8 0 6 14)
            (14 6 7 15)
            (15 7 1 9)
            (9 1 2 10)
            (10 2 3 11)
            (11 3 4 12)
        );
    }


);

mergePatchPairs
(
);

